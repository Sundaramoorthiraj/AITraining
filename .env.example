# Environment variables for Local RAG System
# Copy this file to .env and modify as needed

# Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LLM_MODEL=microsoft/DialoGPT-medium
QUANTIZED_LLM_MODEL=TheBloke/Llama-2-7B-Chat-GGML

# Document Processing
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Vector Store
VECTOR_STORE_PATH=./vector_store
SIMILARITY_THRESHOLD=0.7
TOP_K_RESULTS=5

# Paths
DOCUMENTS_PATH=./documents
CACHE_DIR=./cache

# LLM Inference
MAX_TOKENS=512
TEMPERATURE=0.7
TOP_P=0.9
USE_CPU=true

# Logging
LOG_LEVEL=INFO